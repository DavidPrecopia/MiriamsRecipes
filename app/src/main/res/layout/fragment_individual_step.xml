<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="step"
			type="com.example.miriamsrecipes.datamodel.StepItem" />
	</data>
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.recipe.IndividualStepFragment">
		
		
		<android.support.constraint.ConstraintLayout
			android:id="@+id/step_navigation_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorPrimaryDark"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintStart_toStartOf="parent">
			
			<ImageView
				android:id="@+id/iv_previous_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_normal"
				android:layout_marginStart="@dimen/margin_normal"
				android:layout_marginTop="@dimen/margin_normal"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/ic_arrow_previous_24dp"
				android:contentDescription="@string/previous_step_arrow_description" />
			
			
			<TextView
				android:id="@+id/steps_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_normal"
				android:layout_marginEnd="2dp"
				android:layout_marginTop="@dimen/margin_normal"
				android:text="@string/step_label"
				android:textAppearance="@style/TextSecondary"
				android:textColor="@color/white"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toStartOf="@+id/center_guideline"
				app:layout_constraintTop_toTopOf="parent" />
			
			<android.support.constraint.Guideline
				android:id="@+id/center_guideline"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				app:layout_constraintGuide_percent="0.5" />
			
			<TextView
				android:id="@+id/tv_step_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="2dp"
				android:textAppearance="@style/TextSecondary"
				android:textColor="@color/white"
				app:layout_constraintBaseline_toBaselineOf="@+id/steps_label"
				app:layout_constraintStart_toEndOf="@+id/steps_label"
				tools:text="2/12" />
			
			
			<ImageView
				android:id="@+id/iv_forward_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_normal"
				android:layout_marginEnd="@dimen/margin_normal"
				android:layout_marginTop="@dimen/margin_normal"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/ic_arrow_forward_24dp"
				android:contentDescription="@string/next_step_arrow_description" />
		
		</android.support.constraint.ConstraintLayout>
	
	</android.support.constraint.ConstraintLayout>
</layout>
